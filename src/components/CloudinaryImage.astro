---
import { Cloudinary } from "@cloudinary/url-gen";
interface Props {
  src: string;
  id?: string;
  width?: string;
  height?: string;
  alt?: string;
}

const { src, ...props } = Astro.props;

const cld = new Cloudinary({
  cloud: {
    cloudName: "studiobanauso",
  },
  url: {
    secure: true,
  },
});

let cldSrc = cld.image(src);

cldSrc.format("auto");
cldSrc.quality("auto");
---

<img
  class="mx-auto mb-12 mt-8"
  src={cldSrc.toURL()}
  loading="lazy"
  {...props}
/>
